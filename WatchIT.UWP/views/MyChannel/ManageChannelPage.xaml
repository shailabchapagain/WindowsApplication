<Page
    x:Class="WatchIT.UWP.views.MyChannel.ManageChannelPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WatchIT.UWP.views.MyChannel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:model="using:WatchIT.Domain.Model"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Want to delete your Channel ?" Margin="10 10 0 0" Style="{StaticResource TitleTextBlockStyle}"/>
        <Button Grid.Row="0" x:Name="deleteChannel" Content="Delete Your Channel" Style="{StaticResource AccentButtonStyle}" Click="deleteChannel_Click" CornerRadius="10"  BorderThickness="1" Margin="10 10 0 0" FontWeight="Bold"/>
    </Grid>

  
</Page>
